{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row m-t-40">
        <div class="col-10 col-md-8 offset-md-2 text-center">
            <h4 class="fst-italic">
                Les listes des categories
            </h4>
        </div>
        <div class="col-2 col-md-2  text-center">
            <a class="btn btn-success" href="{{ path('categorie_new') }}">Créer un nouveau</a>
        </div>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Numero</th>
                <th>Intitulé</th>
                <th>Nombre d'article</th>
                <th>Date de création</th>
                <th>Date de modification</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.description }}</td>
                <td>{{ categorie.articles | length }}</td>
                <td>{{ categorie.createdAt ? categorie.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ categorie.updatedAt ? categorie.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                    <a class="btn btn-danger" href="{{ path('categorie_delete', {'id': categorie.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de resultat</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="row">
        <div class="col-12">
            {{ pagerfanta(categories) }}
        </div>
    </div>
</div>
{% endblock %}
