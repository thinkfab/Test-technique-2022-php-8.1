{% extends 'base.html.twig' %}

{% block body %}
    <div class="row m-t-40">
        <div class="col-12 col-md-8 offset-md-2 text-center">
            <h4 class="fst-italic">
                Page pour le test technique confirm√© (PHP/Symfony)
            </h4>
        </div>
    </div>
    <div>
        <a href="{{ path('categorie_new') }}">
            <p>Nouvelle categorie</p>
        </a>
    </div>
    <div>
    {% if pager is defined %}
        {% for category in pager %}
            <div class="col-12 mb-3">
                <div style="box-shadow: 2px 3px 9px 4px rgba(0,0,0,0.04);">
                    <div class="q-container p-4">
                        <div class="row">
                            <div class="col-2 text-center">
                                {{ category.title}}
                            </div>
                            <div class="col-2 text-center">
                                {{ category.articles|length}}
                            </div>
                            <div class="col-2 text-center">
                                <a href="{{ path('categorie_edit', {'id': category.id}) }}">
                                    <p>Modifier categorie</p>
                                </a>
                            </div>
                            <div class="col-2 text-center">
                                <a href="{{ path('categorie_delete', {'id': category.id}) }}">
                                    <p>supprimer categorie</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
    </div>

{% endblock %}
