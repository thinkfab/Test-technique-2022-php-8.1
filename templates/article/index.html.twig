{% extends 'base.html.twig' %}

{% block body %}
    {% set tag = tag is defined and tag is not null ? tag.slug : null %}
    {{ component('article_alone', {
            id              : article.id,
            slug            : article.slug,
            titre           : article.titre,
            content         : article.content,
            createdAt       : article.createdAt,
            tags            : article.tags,
            auteur          : article.auteur,
            commentaires    : article.commentaires,
            tagSlug         : tag
    }) }}
{% endblock %}
